<%= search_form_for @q do |f| %>

  <%# Search if the zip field contains...%>
  <%= f.label :zip_cont %>
  <%= f.search_field :zip_cont %>

  <%# Search if an associated state.name starts with...%>
  <%= f.label :state_name_start %>
  <%= f.search_field :state_name_start %>

  <%# Attributes may be chained. Search multiple attributes for one value...%>
  <%= f.label :state_name_or_zip_or_city_cont %>
  <%= f.search_field :state_name_or_zip_or_city_cont %>

  <%= f.submit %>
<% end %>