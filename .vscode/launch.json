	"version": "0.2.0",
	"configurations": [

        {
            "name": "Seed Database",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "db:migrate"
            ]
        },
		{
            "name": "Debug Rails server",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "useBundler": true,
            "pathToRDebugIDE": "~/.rvm/gems/ruby-2.5.3/gems/ruby-debug-ide-0.6.1/bin/rdebug-ide",
            "program": "${workspaceRoot}/bin/rails",
            "args": [
                "server",
                "-p",
                "5000"
            ]
        }
	]
}